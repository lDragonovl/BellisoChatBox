@{
    ViewData["Title"] = "MyOrder";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model BusinessObject.Model.DataResult
@{
    var list = Model.Result as List<BusinessObject.Model.Page.OrderDataModel>;

}

<section class="gallery_section layout_padding">
    <div style="margin-bottom: 30px;" class="heading_container justify-content-center">
        <h2>
            Quản lý tài khoản
        </h2>
    </div>
<!-- Contact Start -->
<div class="container-fluid">

    <div class="row px-xl-5">
        <div class="col-lg-4 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                    <form name="sentMessage" id="contactForm" novalidate="novalidate">
                        <img style="border-radius: 50%;" alt=""
                             src="https://secure.gravatar.com/avatar/9e0afa26bc1077afbf9bebfbbb0a9b41?s=70&amp;d=mm&amp;r=g"
                             srcset="https://secure.gravatar.com/avatar/9e0afa26bc1077afbf9bebfbbb0a9b41?s=140&amp;d=mm&amp;r=g 2x"
                             height="70" width="70" decoding="async">
                        <p style="font-size: 20px;">Thông tin cá nhân</p>


                        <div style="margin-bottom: 5px;">
                            <a class="form-control_1" href="/Account/MyAccount" style="text-decoration: none;">
                                <i class="fa fa-user-circle " style="color: black; margin-right: 10px;"></i>Thông tin tài khoản
                            </a>

                        </div>

                        <div style="margin-bottom: 5px;">
                            <a class="form-control_1" href="/Account/ChangePassword" style="text-decoration: none;">
                                <i class="fa fa-key" style="color: black; margin-right: 10px;"></i>Đổi mật khẩu
                            </a>

                        </div>

                        <div class="control-group"  style="margin-bottom: 5px;">
                            <a class="form-control_1" style="background-color:#ff8100" href="/Account/MyOrder" style="text-decoration: none;">
                                <i class="fa fa-gift" style="color: black; margin-right: 10px;"></i>Đơn hàng
                            </a>

                        </div>
                        <div class="control-group" style="margin-bottom: 5px;">
                            <a class="form-control_1" href="/Account/MyAddress" style="text-decoration: none;">
                                <i class="fa fa-home" style="color: black; margin-right: 10px;"></i>Địa chỉ
                            </a>

                        </div>
                        <div class="control-group" style="margin-bottom: 5px;">
                            <a class="form-control_1" href="#" onclick="handleLogout()" style="text-decoration: none;">
                                <i class="fa fa-sign-out-alt" style="color: black; margin-right: 10px;"></i>Đăng xuất
                            </a>
                        </div>

                    </form>
            </div>
        </div>

        <div class="col-lg-8 mb-5 bg-light p-30 mb-3" style="height: 100%;">

            <table class="table table-light table-borderless table-hover text-center mb-0" id="orderTable">
                <thead class="thead-dark">
                    <tr>
       
                        <th>Ngày đặt hàng</th>
                        <th>Ngày giao hàng</th>
                        <th>Trạng thái</th>
                        <th>Tổng cộng</th>
                        <th>Xem chi tiết</th>
                    </tr>
                </thead>

                <tbody class="align-middle">
                    @if (list.Count() > 0)
                    {
                        @foreach (var item in list)
                        {
                            var status = "";

                            @switch (item.Status)
                            {
                                case 0:
                                    status = "Đã hủy";
                                    break;
                                case 1:
                                    status = "Chờ xác nhận";
                                    break;
                                case 2:
                                    status = "Đã xác nhận";
                                    break;
                                case 3:
                                    status = "Đang giao hàng";
                                    break;
                                case 4:
                                    status = "Đã hoàn thành";
                                    break;
                            }

                            <tr>
                              
                                <td class="align-middle">@item.StartDate</td>
                                @if (item.EndDate != null)
                                {
                                    <td class="align-middle">@item.EndDate</td>
                                }
                                else
                                {


                                    <td class="align-middle">Chưa hoàn thành</td>
                                }
                                <td class="align-middle"> @status</td>
                                    <td class="align-middle">@item.TotalPrice.ToString("N0")₫</td>
                                    <td class="align-middle">
                                    <button data-orderId="@item.OrderId" onclick="openForm(this)" class="fa fa-eye"
                                            style="background-color:transparent; border: none;"></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</section>
<!-- Contact End -->
<!--View Details Start-->
<div class="user">
    <section class="h-100" id="myForm" style="display:none;">
        <div class="card1">
            <div class="row">
                <h2 class="title" style="font-size: 200%;">Biên lai mua hàng</h2>
                <div class="col-5 pull-right">
                    <button type="button" style="float: right; background-color: red; " class="button-5 "
                            onclick="closeForm() ">
                        X
                    </button>
                </div>
            </div>
            <div class="info">
                <div class="row">
                    <div class="col-7">

                        <span id="heading">Thời gian</span><br>
                        <span id="orderDateOD"></span>
                    </div>
                    <div class="col-5 pull-right">
                        <span id="heading">Họ và tên</span><br>
                        <span id="fullnameOD"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-7">
                        <span id="heading">Số điện thoại</span><br>
                        <span id="phonenumOD"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <span id="heading">Địa chỉ</span><br>
                        <span id="addressOD"></span>
                    </div>
                </div>

            </div>
            <h2 class="title" style="font-size: 150%; text-align: center;">Tóm tắt đơn hàng</h2>
            <div class="pricing">
                <div class="scroll" id="listOrderDetail">
                </div>
            </div>
            <hr>

            <div class="total">
                <div class="row">
                    <h4 class="col-9">Shipping</h4>
                    <div class="col-3" id="Shipping">25,000₫</div>
                </div>
                <div class="row">
                    <h2 class="col-9">Tổng tiền</h2>
                    <div class="col-3" id="totalPriceRecipt"></div>
                </div>
            </div>
            <div class="progress-track" id="ODDancer">
            </div>
            <div class="row">
                <button type="button" style="background-color: red; margin-left:540px; z-index:0;" id="cancelOrderButton" class="button-5" onclick="showConfirmationForm()">Hủy đơn hàng</button>
            </div>
        </div>
    </section>
</div>

<div id="confirmationForm" style="display:none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 9999;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: white; padding: 20px; border-radius: 10px; text-align: center;">
        <h3>Xác nhận hủy đơn hàng</h3>
        <p>Bạn có chắc là muốn hủy đơn hàng?</p>
        <button type="button" style="background-color: red;border-radius:10px; color: white; padding: 10px 20px; margin: 10px;" onclick="confirmCancelOrder()">Yes</button>
        <button type="button" style="background-color: gray;border-radius:10px; color: white; padding: 10px 20px; margin: 10px;" onclick="closeConfirmationForm()">No</button>
    </div>
</div>

<!--View Details End-->
<script src="~/js/address/orderdetailform.js"></script>
<script src="~/js/loadorder.js"></script>